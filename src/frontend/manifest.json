{
    "manifest_version": 3,
    "name": "NB Extension",
    "description": "Extension to show bias-indicative results using AI",
    "version": "2024.04.11",

    "action": {
      "default_popup": "elements/default_popup.html",
      "default_icon": "images/default_icon.png"
    },

    "web_accessible_resources": [{
      "resources": ["elements/image_hover/image_hover.html",
                    "elements/image_hover/image_hover.css"],
      "matches":   ["<all_urls>"]}],

    "content_scripts": [{
          "js": ["scripts/content.js"],
          "matches": ["https://timesofmalta.com/article/*",
                      "https://theshiftnews.com/*/*/*/*",
                      "https://www.maltatoday.com.mt/news/*/*",
                      "https://www.maltatoday.com.mt/environment/*/*"]}]
  }